pipeline {
    agent any
    tools {
       terraform 'terraform'
    }
    stages {
        stage('Git checkout') {
           steps{
                git branch: 'main', credentialsId: 'Github', url: 'https://github.com/DohaHQ/tf.git'
            }
        }
        
        stage('terraform Init') {
            steps{
                dir('EB-build') 
                {
                sh 'terraform init'
                }
            }
        }
        stage ("terraform fmt") {
            steps {
                dir('EB-build') {
                sh 'terraform fmt'
                }
            }
        }
        stage ("terraform validate") {
            steps {
                dir('EB-build') {
                sh 'terraform validate'
                }
            }
        }

        stage('terraform Plan') {
            steps{
                dir('EB-build') 
                {
                sh 'terraform plan'
                }
            }
        }

        stage('terraform apply') {
            steps{
                dir('EB-build') 
                {
                sh 'terraform apply --auto-approve'
                }
            }
        }
    }

    
}
